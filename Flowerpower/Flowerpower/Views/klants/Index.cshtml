@model IEnumerable<Flowerpower.Models.klant>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.naam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.achternaam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.straatnaam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.postcode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tussenvoegsel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.geboortedatum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.woonplaats)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.naam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.achternaam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.straatnaam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.postcode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tussenvoegsel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.geboortedatum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.woonplaats)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id = item.klantid })">
                <button type="button" class="btn btn-warning">Edit</button>
            </a>

            <a href="@Url.Action("Details", new { id = item.klantid })">
                <button type="button" class="btn btn-info">Details</button>
            </a>

            <a href="@Url.Action("Delete", new { id = item.klantid })">
                <button type="button" class="btn btn-danger">Delete</button>
            </a>
        </td>
    </tr>
}

</table>
